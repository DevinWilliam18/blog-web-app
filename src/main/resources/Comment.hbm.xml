<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <!-- Class mapping -->
    <class name="model.Comment" table="comment">
        <!-- Primary key mapping -->
        <id name="id" column="id" type="string"> 
        </id>
       
       	<!-- one to one -->
       	
        <!-- Property mappings -->
        <property name="commentContent" column="comment_content" type="string" />
        <property name="createdAt" column="created_at" type="timestamp" />
        <property name="updatedAt" column="updated_at" type="timestamp" />
        
    </class>
</hibernate-mapping>